<div class='container-fluid'>
  <div class="row-fluid">
    <div class='content span12'>
      <h1>Free Your Code</h1>
      <% if current_user %>
        <p class='lead'>Signed in as <b><%= current_user.name || current_user.nickname %></b>. <a href='/logout'>Logout</a></p>
        <a href="https://github.com/<%= current_user.nickname %>"><img src="<%= current_user.avatar_url %>&s=200" class="avatar-url img-circle"></a>
      <% else %>
        <a class='sign-in-button btn btn-large' href='/auth/github'>Sign in with GitHub</a>
      <% end %>
    </div>
  </div>
</div>
